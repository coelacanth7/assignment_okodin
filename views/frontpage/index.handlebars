<form class="form-group" action="/search" method="post">

  <nav class="nav nav-tabs" id="myTab" role="tablist">
    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Basics</a>
    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Demographics</a>
    <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Life</a>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="row">


        <div class="col-sm-2">
          <label class="form-check-label">
            <input checked class="form-check-input" name="profile[gender]" type="checkbox" value="male"> Male
          </label><br>
          <label class="form-check-label">
            <input checked class="form-check-input" name="profile[gender]"  type="checkbox" value="female"> female
          </label>
        </div>

        <div class="form-group col-sm-2">
          <label for="age">Age</label><br>
          <input type="number" name="profile[age]" class="form-control" id="age" value="22">
        </div>

        <div class="form-group col-sm-2">
          <label for="height">Height</label><br>
          <input type="number" name="profile[height]" class="form-control" id="height" value="60">
        </div>

        <div class="form-group col-sm-2">
          <label for="kids">Kids</label><br>
          <input type="number" name="profile[kids]" class="form-control" id="kids" value="0">
        </div>

        <div class="form-group col-sm-2">
          <label for="distance">Miles away</label><br>
          <input type="number" name="profile[distance]" class="form-control" id="distance" value="5">
        </div>

      </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
      ipsum dolor sit amet, consectetur adipisicing elit, .</div>
    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
       sunt in culpa qui officia deserunt mollit anim id est laborum.</div>
  </div>

<input type="submit" name="" value="submit" class="btn btn-defualt" >
<a href="/frontpage"><button class="btn" type="button" name="button">clear search</button></a>
</form>


<div class="row">
  {{#each users as |user|}}
  <div class="col-sm-4">
    <div class="card">
      <img class="card-img-top" src="{{user.Profile.image}}" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><a href="/profile/{{user.username}}">{{user.username}}</a></h5>

        <a href="#" class="btn btn-primary">Like</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
